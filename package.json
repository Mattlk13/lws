{
  "name": "lws",
  "author": "Lloyd Brookes <75pound@gmail.com>",
  "version": "4.0.0-1",
  "description": "A lean, modular web server for rapid full-stack development",
  "repository": "https://github.com/lwsjs/lws.git",
  "license": "MIT",
  "bin": {
    "lws": "bin/cli.mjs"
  },
  "main": "./index.mjs",
  "exports": {
    ".": "./index.mjs",
    "./ssl/*": "./ssl/*",
    "./lib/*": "./lib/*"
  },
  "keywords": [
    "lws",
    "server",
    "http",
    "http2",
    "https",
    "backend"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "test": "test-runner test/*.mjs test/internals/*.mjs",
    "cover": "TESTOPEN=true nyc -r html -r text npm test && nyc report --reporter=text-lcov | coveralls",
    "docs": "jsdoc2md lib/middleware-plugin.mjs > doc/middleware-plugin.md && jsdoc2md --private index.mjs > doc/lws.md && jsdoc2md lib/view/view-plugin.mjs > doc/view-plugin.md && jsdoc2md lib/config.mjs > doc/config.md"
  },
  "files": [
    "index.mjs",
    "ssl",
    "lib/**/*.mjs",
    "bin"
  ],
  "dependencies": {
    "ansi-escape-sequences": "^6.0.1",
    "array-back": "^6.0.1",
    "byte-size": "^7.0.1",
    "command-line-args": "^5.1.1",
    "command-line-usage": "^6.1.1",
    "create-mixin": "^3.0.0",
    "current-module-paths": "^0.1.0",
    "koa": "^2.13.1",
    "load-module": "^4.0.1",
    "lodash.assignwith": "^4.2.0",
    "open": "^8.0.9",
    "qrcode-terminal": "^0.12.0",
    "reduce-flatten": "^3.0.0",
    "typical": "^6.0.1",
    "walk-back": "^5.0.0"
  },
  "devDependencies": {
    "coveralls": "^3.1.0",
    "lws-static": "^2.0.0",
    "node-fetch": "^2.6.1",
    "nyc": "^15.1.0",
    "sleep-anywhere": "^1.1.3",
    "test-runner": "^0.9.2"
  },
  "contributors": [
    "Tiago Stutz <tiagostutz@gmail.com.br> (https://github.com/labbsr0x)"
  ]
}
